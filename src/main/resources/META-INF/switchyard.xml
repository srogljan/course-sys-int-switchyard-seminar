<?xml version="1.0" encoding="UTF-8"?>
<sy:switchyard xmlns:bean="urn:switchyard-component-bean:config:2.0"
               xmlns:file="urn:switchyard-component-camel-file:config:2.0"
               xmlns:jms="urn:switchyard-component-camel-jms:config:2.0"
               xmlns:resteasy="urn:switchyard-component-resteasy:config:2.0"
               xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912"
               xmlns:soap="urn:switchyard-component-soap:config:2.0" xmlns:sy="urn:switchyard-config:switchyard:2.0"
               xmlns:transform="urn:switchyard-config:transform:2.0" name="order"
               targetNamespace="urn:com.redhat.brq.integration.switchyard:1.0">
    <sca:composite name="order" targetNamespace="urn:com.redhat.brq.integration.switchyard:1.0">
        <sca:component name="OrderComponent">
            <bean:implementation.bean class="com.redhat.brq.integration.switchyard.shop.OrderServiceBean"/>
            <sca:service name="OrderService">
                <sca:interface.java interface="com.redhat.brq.integration.switchyard.shop.OrderService"/>
            </sca:service>
            <sca:reference name="ShipmentService">
                <sca:interface.java interface="com.redhat.brq.integration.switchyard.shipment.ShipmentService"/>
            </sca:reference>
            <sca:reference name="InventoryService">
                <sca:interface.java interface="com.redhat.brq.integration.switchyard.inventory.InventoryService"/>
            </sca:reference>
            <sca:reference name="AccountingService">
                <sca:interface.java interface="com.redhat.brq.integration.switchyard.accounting.AccountingService"/>
            </sca:reference>
            <sca:reference name="OrderStatusService">
                <sca:interface.java interface="com.redhat.brq.integration.switchyard.status.OrderStatusService"/>
            </sca:reference>
        </sca:component>
        <sca:component name="OrderStorage">
            <bean:implementation.bean class="com.redhat.brq.integration.switchyard.status.OrderStatusServiceBean"/>
            <sca:service name="OrderStatusService">
                <sca:interface.java interface="com.redhat.brq.integration.switchyard.status.OrderStatusService"/>
            </sca:service>
        </sca:component>
        <sca:component name="ShipmentReplyComponent">
            <bean:implementation.bean class="com.redhat.brq.integration.switchyard.shipment.ShipmentReplyServiceBean"/>
            <sca:service name="ShipmentReplyService">
                <sca:interface.java interface="com.redhat.brq.integration.switchyard.shipment.ShipmentReplyService"/>
            </sca:service>
            <sca:reference name="OrderStatusService">
                <sca:interface.java interface="com.redhat.brq.integration.switchyard.status.OrderStatusService"/>
            </sca:reference>
        </sca:component>
        <sca:component name="InventoryReplyComponent">
            <bean:implementation.bean
                    class="com.redhat.brq.integration.switchyard.inventory.InventoryReplyServiceBean"/>
            <sca:service name="InventoryReplyService">
                <sca:interface.java interface="com.redhat.brq.integration.switchyard.inventory.InventoryReplyService"/>
            </sca:service>
            <sca:reference name="OrderStatusService">
                <sca:interface.java interface="com.redhat.brq.integration.switchyard.status.OrderStatusService"/>
            </sca:reference>
        </sca:component>
        <sca:service name="ShipmentReplyServicePortType" promote="ShipmentReplyComponent/ShipmentReplyService">
            <sca:interface.wsdl interface="ShipmentService.wsdl#wsdl.porttype(ShipmentReplyServicePortType)"/>
            <jms:binding.jms name="jms1">
                <jms:contextMapper includes=".*"/>
                <jms:queue>SHPMNT.RESP</jms:queue>
                <jms:connectionFactory>#ConnectionFactory</jms:connectionFactory>
            </jms:binding.jms>
        </sca:service>
        <sca:service name="InventoryReplyService" promote="InventoryReplyComponent/InventoryReplyService">
            <sca:interface.wsdl interface="InventoryService.wsdl#wsdl.porttype(InventoryResponseServicePortType)"/>
            <file:binding.file name="file1">
                <file:contextMapper includes="orderId"/>
                <file:messageComposer class="com.redhat.brq.integration.switchyard.inventory.MessageComposer"/>
                <file:directory>${sys.base}/target/outbox/inventory</file:directory>
                <file:consume>
                    <file:delete>true</file:delete>
                </file:consume>
            </file:binding.file>
        </sca:service>
        <sca:reference name="InventoryServicePortType" multiplicity="0..1" promote="OrderComponent/InventoryService">
            <sca:interface.wsdl interface="InventoryService.wsdl#wsdl.porttype(InventoryServicePortType)"/>
            <file:binding.file name="file1">
                <file:contextMapper includes=".*"/>
                <file:messageComposer class="com.redhat.brq.integration.switchyard.inventory.MessageComposer"/>
                <file:directory>${sys.base}/target/inbox/inventory</file:directory>
                <file:produce/>
            </file:binding.file>
        </sca:reference>
        <sca:reference name="ShipmentServicePortType" multiplicity="0..1" promote="OrderComponent/ShipmentService">
            <sca:interface.wsdl interface="ShipmentService.wsdl#wsdl.porttype(ShipmentServicePortType)"/>
            <jms:binding.jms name="jms.req">
                <jms:contextMapper includes=".*"/>
                <jms:queue>SHPMNT.REQ</jms:queue>
                <jms:connectionFactory>#ConnectionFactory</jms:connectionFactory>
            </jms:binding.jms>
        </sca:reference>
        <sca:reference name="AccountingResource" multiplicity="0..1" promote="OrderComponent/AccountingService">
            <sca:interface.java interface="com.redhat.brq.integration.switchyard.accounting.AccountingResource"/>
            <resteasy:binding.rest name="rest1">
                <resteasy:interfaces>com.redhat.brq.integration.switchyard.accounting.AccountingResource
                </resteasy:interfaces>
                <resteasy:address>https://localhost:7171</resteasy:address>
                <resteasy:basic>
                    <resteasy:user>admin</resteasy:user>
                    <resteasy:password>foo</resteasy:password>
                    <resteasy:host>localhost</resteasy:host>
                    <resteasy:port>7171</resteasy:port>
                </resteasy:basic>
            </resteasy:binding.rest>
        </sca:reference>
        <sca:service name="OrderServicePortType" promote="OrderComponent/OrderService">
            <sca:interface.wsdl interface="OrderService.wsdl#wsdl.porttype(OrderServicePortType)"/>
            <soap:binding.soap name="soap1">
                <soap:contextMapper soapHeadersType="VALUE"/>
                <soap:wsdl>OrderService.wsdl</soap:wsdl>
            </soap:binding.soap>
        </sca:service>
    </sca:composite>
    <sy:transforms>
        <transform:transform.jaxb from="java:com.redhat.brq.integration.switchyard.models.Address"
                                  to="{urn:com.redhat.brq.integration.exercise.shipment:1.0}address"
                                  contextPath="com.redhat.brq.integration.switchyard.models"/>
        <transform:transform.jaxb from="{urn:com.redhat.brq.integration.switchyard:1.0}order"
                                  to="java:com.redhat.brq.integration.switchyard.models.Order"
                                  contextPath="com.redhat.brq.integration.switchyard.models"/>
    </sy:transforms>
    <sy:domain>
        <sy:properties load="service.properties">
            <sy:property name="org.switchyard.handlers.messageTrace.enabled" value="true"/>
        </sy:properties>
    </sy:domain>
</sy:switchyard>